<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Calculator Test Suite" verbose="1">
    <listeners>
        <listener class-name="com.Backend.TestListener"/>
    </listeners>

    <test name="Calculator Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
                <include name="integration"/>
                <exclude name="performance"/>
            </run>
        </groups>

        <classes>
            <class name="com.Backend.CalculatorTest"/>
            <class name="com.Backend.GroupTest"/>
        </classes>
    </test>

    <test name="Data Provider Tests">
        <classes>
            <class name="com.Backend.DataProviderTest"/>
        </classes>
    </test>
</suite>